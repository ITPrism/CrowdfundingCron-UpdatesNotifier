<?xml version="1.0" encoding="utf-8"?>
<extension version="3.6" type="plugin" group="crowdfundingcron" method="upgrade">
    <name>PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2016 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPLv3</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.2</version>
    <creationDate>25 September, 2016</creationDate>
    <description>
	<![CDATA[
	<p>This is a CRON plug-in for CrowdFunding platform that sends notifications to users when the project owner adds an update record.</p>
	<p><a href='http://itprism.com/' target='_blank'>Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
	<p>Please, <a href='http://extensions.joomla.org/extensions/e-commerce/donations/23876' target='_blank'>vote for the extension</a> on Joomla! Extensions Directory</p>
	]]></description>

    <files>
        <filename plugin="updatesnotifier">updatesnotifier.php</filename>
		<folder>language</folder>
    </files>
    
    <help url="PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_HELP_URL"/>
    
    <config>
        <fields name="params">

            <fieldset name="basic" addfieldpath="/administrator/components/com_emailtemplates/models/fields">
                <field name="period" type="text" default="7" label="PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_PERIOD_DAYS" description="PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_PERIOD_DAYS_DESC" />
                <field name="description_length" type="text" label="PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_CONTENT_LENGTH" description="PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_CONTENT_LENGTH_DESC" />
                <field name="domain" type="text" label="PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_DOMAIN" description="PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_DOMAIN_DESC" />

                <field name="email_id" type="emailtemplate" default="0" label="PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_EMAIL" description="PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_EMAIL_DESC" />
                <field name="email_mode" type="list" default="html" label="PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_EMAIL_MODE" description="PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_EMAIL_MODE_DESC" >
                    <option value="plain">PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_PLAIN</option>
                    <option value="html">PLG_CROWDFUNDINGCRON_UPDATES_NOTIFIER_HTML</option>
                </field>
            </fieldset>
        </fields>
    </config>
		
</extension>
